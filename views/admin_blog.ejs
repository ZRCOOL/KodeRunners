    var socket = io();
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
        $("input[type='checkbox']").change(function(e){
            if($(this).prop("checked") == true){
            socket.emit("approve",{
                id: this.name,
